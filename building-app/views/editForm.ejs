<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Building Accessibility</title>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
<body>
    <form action="/allForEditing" method="get">
        <h3>All Buildings in Database</h3>

        <input type="submit" value="Look">

    </form>
    <form method="POST" action="/edit">
        <h3>Edit a building</h3>

        Building Name: <input name="name" value="<%= building.name %>" readonly>
        <p>
        
            <input type="text" id="newname" name="newname">
            <label for="newname"> Edit Building Name</label><br>

            <input type="text" id="newaddress" name="newaddress" value="<%= building.address %>">
            <label for="newaddress"> Edit Building Address</label><br>

            <select id="accessible_entrance" name="accessible_entrance" value="<%= building.accessible_entrance %>">
                <option>N/A</option>
                <option value='Yes'>Yes</option>
                <option value='No'>No</option>
            </select>
            <label for="accessible_entrance"> Edit Accessible Entrance</label><br>
        
            <select id="accessible_restroom" name="accessible_restroom" value="<%= building.accessible_restroom %>">
                <option>N/A</option>
                <option value='Yes'>Yes</option>
                <option value='No'>No</option>
            </select>
            <label for="accessible_restroom"> Edit Accessible Restroom</label><br>
        
            <select id="handicap_parking" name="handicap_parking" value="<%= building.handicap_parking %>">
                <option>N/A</option>
                <option value='Yes'>Yes</option>
                <option value='No'>No</option>
            </select>
            <label for="handicap_parking"> Edit Handicap Parking</label><br>
        <p>
        <input type="submit" value="Update">
    </form>

</body>

</html>