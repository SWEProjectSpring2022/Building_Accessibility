<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Building Accessibility</title>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
<body>
    <form action="/allForView" method="get">
        <h3>All Buildings in Database to View</h3>

        <input type="submit" value="Look">

    </form>
    <form method="get" action="/view">
        <h3>Building Information</h3>

        Building Name: <input name="name" value="<%= building.name %>" readonly>
        Building Address: <input id="address" name="address" value="<%= building.address %>">
        Accessible Entrance: <input name="accessible_entrance" value="<%= building.accessible_entrance %>">
        Accessible Restroom: <input name="accessible_restroom" value="<%= building.accessible_restroom %>">
        Handicap Parking: <input name="handicap_parking" value="<%= building.handicap_parking %>">
        
    </form>

</body>

</html>